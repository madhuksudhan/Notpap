<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#FAFAFA"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/ivMain"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tvHeadings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/ivMain"
            android:text="Description" />

        <ImageView
            android:id="@+id/ivViews"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/tvHeadings"
            android:layout_below="@+id/tvHeadings"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivViews"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/ivViews"
            android:text="69" />

        <ImageView
            android:id="@+id/ivLikes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tvViews"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/tvViews" />

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivLikes"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/ivLikes"
            android:text="69" />


    </RelativeLayout>
</android.support.v7.widget.CardView>